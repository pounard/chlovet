{% import 'theme:vetbase:templates/node/search.html.twig' as search %}
<nav id="header" class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="{{ path('<front>') }}">{{ site_name }}</a>
    </div>
    <div class="collapse navbar-collapse" id="header-collapse">
      {% if menu_header %}
        {{ menu_header }}
      {% endif %}
    </div>
  </div>
</nav>
<div id="page">
  {% if menu %}
    {{ menu }}
  {% endif %}
  <div id="banner" class="container">
    <div class="row">
      {% if page.banner %}
        {{ page.banner }}
      {% endif %}
      {% if page.banner_right %}
        {{ page.banner_right }}
      {% endif %}
    </div>
  </div>
  {% if isFrontPage %}
    {% set frontRegionList = ['front1', 'front2', 'front3', 'front4'] %}
    {% for frontRegion in frontRegionList %}
      {% if page[frontRegion] %}
        <div id="{{ frontRegion }}" class="front-pane">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                {{ page[frontRegion] }}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  {% else %}
    {% if showBreadcrumb and breadcrumb %}
      <div id="breadcrumb">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              {{ breadcrumb }}
            </div>
          </div>
        </div>
      </div>
    {% endif %}
    <div class="container">
      <div class="row" id="main-wrapper">
      {# {% if page.left or menu_siblings %} #}
      {% if page.left or menu_navigation %}
          <div id="sidebar" class="hidden-print col-xs-12 col-md-4">
            {% if menu_navigation %}
              <div class="hidden-xs">
                {{ menu_navigation }}
              </div>
            {% endif %}
            {% if page.left %}
              {{ page.left }}
            {% endif %}
          </div>
          <div id="content" class="col-xs-12 col-md-8">
            <a id="main-content" title="{{ "Main content"|trans }}"></a>
            {% if page.content %}
              {{ page.content }}
            {% endif %}
          </div>
        {% else %}
          <div id="main" class="col-md-12">
            <a id="main-content" title="{{ "Main content"|trans }}"></a>
            {% if page.content %}
              {{ page.content }}
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          {% for name in ['footer1', 'footer2', 'footer3', 'footer4'] %}
            {# always reserve space even if empty #}
            <div id="{{ name }}" class="col-xs-12 col-sm-4 col-md-3">
              {% if page[name] %}
                {{ page[name] }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div id="footer-footer">
    <a href="{{ url('<front>') }}">{{ site_name }}</a>
  </div>
</div>