{% extends 'theme:vetbase:templates/node/node.html.twig' %}

{% import 'theme:vetbase:templates/node/search.html.twig' as search %}

{% block title_tag %}
{% endblock %}

{% block content %}
  <section id="search-results">
    {{ search.search_form(node_url) }}
    <div class="row">
      {% for node_view in search_results %}
        {{ node_view }}
      {% else %}
        <p class="no-result">{{ "Tapez votre recherche dans la barre ci-dessus."|trans }}</p>
      {% endfor %}
    </div>
    {% if search_displayed and search_total %}
      <p class="small text-muted">Displaying {{ search_displayed }} in {{ search_total }} results</p>
    {% endif %}
  </section>
{% endblock %}
