{% set classes = classes ~ ' col-md-4 col-xs-6' %}
<section class="{{ classes }}"{{ attributes }}>
  <a href="{{ node_url }}">
    {% block content %}
      {% if content.list_image %}
        {{ content.list_image }}
      {% endif %}
    {% endblock %}
    {{ title_prefix }}
    <div class="title">
      <h1>{{ title }}</h1>
    </div>
    {{ title_suffix }}
  </a>
</section>